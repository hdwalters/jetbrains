<application>
  <component name="DefaultFont">
    <option name="FONT_SIZE" value="14" />
    <option name="FONT_FAMILY" value="Source Code Pro" />
    <option name="LINE_SPACING" value="1.0" />
  </component>
  <component name="TodoConfiguration">
    <pattern case-sensitive="true" pattern="\bTODO\b.*" />
    <pattern useCustomColors="true" case-sensitive="true" pattern="\bHACK\b.*">
      <option name="FOREGROUND" value="bd00bd" />
      <option name="FONT_TYPE" value="3" />
      <option name="ERROR_STRIPE_COLOR" value="e356e3" />
    </pattern>
  </component>
</application>